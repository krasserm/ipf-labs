<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd
">
    <bean class="org.openehealth.ipf.commons.message.ConversionRegistration">
        <property name="strategies">
            <list>
                <bean class="org.openehealth.ipf.commons.message.StringConversion"/>
                <bean class="org.openehealth.ipf.commons.message.ObjectConversion"/>
                <bean class="org.openehealth.ipf.commons.message.InputStreamConversion"/>
            </list>
        </property>
    </bean>

    <context:component-scan base-package="org.openehealth.ipf.commons.message.resources" />
</beans>
